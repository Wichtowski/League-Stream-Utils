{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/lib/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@schemas/*": ["./src/lib/database/schemas/*"],
      "@auth/*": ["./src/auth/*"],
      "@electron/*": ["./electron/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/pages/404/page.js",
    "src/app/modules/pickban/leagueclient/champselect/components/ChampSelectLayout.tsx",
    "src/app/lib/services/base-blueprint-downloader.ts"
  ],
  "exclude": ["node_modules"]
}

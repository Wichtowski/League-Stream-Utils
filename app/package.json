{
  "name": "League Stream Utils",
  "version": "1.0.0",
  "description": "League of Legends Stream Management",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "generate-secrets": "node scripts/generate-secrets.js",
    "check-env": "node -e \"require('./src/app/lib/config.js')\"",
    "security-audit": "npm audit --audit-level moderate",
    "dev": "next dev --turbopack --port 2137",
    "build": "bun run next build",
    "start": "bun run next start",
    "lint": "bun run next lint",
    "create-admin": "node scripts/create-admin.js",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:wsl": "export $DISPLAY=:0 && cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"bun run dev -- --port 2137\" \"wait-on http://localhost:2137 && electron .\"",
    "electron-windows": "cross-env NODE_ENV=development electron .",
    "electron-build": "bun run build && next export && electron-builder",
    "dist": "bun run build && next export && electron-builder --publish=never"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.9.1",
    "@heroicons/react": "^2.2.0",
    "@types/mongoose": "^5.11.97",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.16.0",
    "next": "15.3.3",
    "node-cache": "^5.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "stripe": "^17.4.0",
    "typescript": "^5",
    "uuid": "^11.0.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/node-cache": "^4.1.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.6.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-import": "^2.32.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.league-stream-utils.app",
    "productName": "League Stream Utils",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.sports"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}